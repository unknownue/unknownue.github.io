+        FloatOrd(self.start_margin.start).hash(state);
+        FloatOrd(self.start_margin.end).hash(state);
+        FloatOrd(self.end_margin.start).hash(state);
+        FloatOrd(self.end_margin.end).hash(state);
+    }
+}
