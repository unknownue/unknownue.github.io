+fn close_side(p: f32, h: f32) -> f32 {
+    (-h - p).abs().min((h - p).abs())
+}
+
+fn far_side(p: f32, h: f32) -> f32 {
+    (-h - p).abs().max((h - p).abs())
+}
+
+fn close_side2(p: Vec2, h: Vec2) -> f32 {
+    close_side(p.x, h.x).min(close_side(p.y, h.y))
+}
+
+fn far_side2(p: Vec2, h: Vec2) -> f32 {
+    far_side(p.x, h.x).max(far_side(p.y, h.y))
